{{#if logged_in}}
<h5 class="center-align">Welcome {{username}}! Please make sure your towel is handy at all times while visiting.</h5>
{{!-- {{log Posts}} --}}

<div class="posts-container">

{{#each Posts as |posts|}}

    <div class="row">
        <div class="col s12 m8 offset-m2 center-align">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <a href="/post/{{posts.id}}"> <span class="card-title">{{posts.post_name}} {{#if edited}} (edited) {{/if}}</span></a>
                    <p>{{posts.post_text}}</p>
                </div>
                <div class="card-action">
                    <p>Created on {{format_date posts.created_at}}</p>
                </div>
            </div>
            <button data-edit-id="{{posts.id}}" class="btn waves-effect waves-red waves-ripple center-align edit-btn" type="button" name="action">Edit
                <i class="material-icons right">create</i>
            </button>
            <button data-delete-id="{{posts.id}}" class="btn waves-effect waves-red waves-ripple center-align delete-btn" type="button" name="action">Delete
                <i class="material-icons right">delete</i>
            </button>
        </div>
    </div>

{{/each}}
</div>
{{else}}

<h6 class="center-align">You must be <a href="/login">logged in</a> (and have your towel) to view the dashboard.</h6>

{{/if}}


<script src="../js/dashboard.js"></script>